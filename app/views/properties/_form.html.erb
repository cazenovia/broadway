<%= form_with(model: property, class: "contents") do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul class="list-disc ml-6">
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:address].none?, "border-red-400 focus:outline-red-600": property.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :owner %>
    <%= form.text_field :owner, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:owner_name].none?, "border-red-400 focus:outline-red-600": property.errors[:owner_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :zoning %>
    <%= form.text_field :zoning, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:zoning].none?, "border-red-400 focus:outline-red-600": property.errors[:zoning].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :usage_type %>
    <%= form.text_field :usage_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:usage_type].none?, "border-red-400 focus:outline-red-600": property.errors[:usage_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:notes].none?, "border-red-400 focus:outline-red-600": property.errors[:notes].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
