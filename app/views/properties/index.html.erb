<div class="w-full h-full absolute inset-0"
     data-controller="map"
     data-map-api-key-value="<%= Rails.application.credentials.dig(:mapbox, :public_key) %>"
     data-map-properties-value='<%= {
       type: "FeatureCollection",
       features: @properties.map { |p| 
         {
           type: "Feature",
           properties: {
             id: p.id,
             address: p.address,
             usage_type: p.usage_type,
             notes: p.notes   },
           geometry: RGeo::GeoJSON.encode(p.boundary)
         }
       }
     }.to_json %>'>
</div>

<div id="property_editor_card" class="fixed bottom-0 left-0 right-0 z-[100] bg-white p-6 rounded-t-3xl shadow-[0_-10px_40px_rgba(0,0,0,0.2)] transition-transform duration-300 transform translate-y-full" data-controller="map-ui">
  
  <div class="flex justify-between items-center mb-4 border-b pb-3">
    <h2 id="form_address" class="text-xl font-bold text-gray-800">Property Address</h2>
    <button type="button" onclick="closePropertyForm()" class="bg-gray-200 text-gray-600 rounded-full p-2 hover:bg-gray-300">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    </button>
  </div>

  <%= form_with(url: "", id: "property_form", method: :patch, class: "space-y-4", data: { action: "submit->connection#handleOfflineSubmit" }) do |f| %>
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-1">Usage Type</label>
      <select name="property[usage_type]" id="form_usage_type" class="w-full rounded-lg border-gray-300 bg-gray-50 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500">
        <option value="Residential">Residential</option>
        <option value="Commercial">Commercial</option>
        <option value="Mixed-Use">Mixed-Use</option>
        <option value="Vacant">Vacant</option>
      </select>
    </div>
    
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-1">Field Notes</label>
      <textarea name="property[notes]" id="form_notes" rows="3" class="w-full rounded-lg border-gray-300 bg-gray-50 p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Enter notes here..."></textarea>
    </div>
    
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-1">Photo Evidence</label>
      <input type="file" name="property[photo]" id="form_photo" accept="image/*" capture="environment" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
    </div>
    
    <div class="pt-2">
      <button type="submit" class="w-full bg-blue-600 text-white py-3 px-4 rounded-xl font-bold shadow-md hover:bg-blue-700 active:transform active:scale-95 transition-all">
        Save Property
      </button>
    </div>
  <% end %>
</div>

<script>
  function closePropertyForm() {
    const card = document.getElementById('property_editor_card');
    card.classList.add('translate-y-full'); // Slides it down off screen
  }
</script>