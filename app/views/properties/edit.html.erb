<turbo-frame id="property_editor">
  <div class="bg-white rounded-t-xl shadow-2xl border-t border-gray-200 p-6 pointer-events-auto max-w-lg mx-auto h-[60vh] overflow-y-auto">
    
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-bold text-gray-800"><%= @property.address %></h2>
      <%= link_to "Close", root_path, class: "text-gray-500 hover:text-gray-800 font-medium" %>
    </div>

    <%= form_with(model: @property, class: "space-y-4") do |form| %>
      
      <div>
        <%= form.label :usage_type, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :usage_type, ["Retail", "Residential", "Vacant", "Public", "Mixed-Use"], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :notes, "Field Notes", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="pt-2">
        <label class="block w-full flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md cursor-pointer hover:bg-gray-50">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <span class="font-medium text-indigo-600 hover:text-indigo-500">Take a photo</span>
            </div>
          </div>
          <input type="file" name="property[photos][]" class="sr-only" accept="image/*" capture="environment">
        </label>
      </div>

      <div class="pt-4">
        <%= form.submit "Update Property", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</turbo-frame>